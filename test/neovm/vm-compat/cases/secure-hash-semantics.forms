; secure-hash should match GNU Emacs for standard algorithms and core error paths.
(secure-hash 'md5 "abc")
(secure-hash 'sha1 "abc")
(secure-hash 'sha224 "abc")
(secure-hash 'sha256 "abc")
(secure-hash 'sha384 "abc")
(secure-hash 'sha512 "abc")
(condition-case err
    (secure-hash "sha256" "abc")
  (error err))
(condition-case err
    (secure-hash 'no-such "abc")
  (error err))
(condition-case err
    (secure-hash 'sha256 123)
  (error err))
(secure-hash 'sha256 "abcdef" 1 4)
(condition-case err
    (secure-hash 'sha256 "abc" 2 1)
  (error err))
(condition-case err
    (secure-hash 'sha256 "abc" t 2)
  (error err))
