; Baseline scan-lists compatibility (depth=0 paths + core validation).

(fboundp 'scan-lists)

(with-temp-buffer
  (insert "(a b)")
  (scan-lists 1 1 0))

(with-temp-buffer
  (insert "(a b)")
  (scan-lists 1 -1 0))

(condition-case err (scan-lists 1) (wrong-number-of-arguments (car err)))
(condition-case err (scan-lists 1 1) (wrong-number-of-arguments (car err)))
(condition-case err (scan-lists 1 1 0 0) (wrong-number-of-arguments (car err)))

(condition-case err (scan-lists "1" 1 0) (error (car err)))
(condition-case err (scan-lists 1 "1" 0) (error (car err)))
(condition-case err (scan-lists 1 1 "0") (error (car err)))
