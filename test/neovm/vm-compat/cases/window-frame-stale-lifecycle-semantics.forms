; window/frame lifecycle edge cases with stale live references.
(fboundp 'split-window)
(fboundp 'delete-window)
(fboundp 'window-live-p)
(fboundp 'window-point)

(let ((w (split-window)))
  (delete-window w)
  (list (window-live-p w)
        (condition-case err (window-point w) (error (car err)))))
