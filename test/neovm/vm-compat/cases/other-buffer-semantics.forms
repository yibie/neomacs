(fboundp 'other-buffer)
(condition-case err (other-buffer nil nil nil nil) (error (car err)))
(bufferp (other-buffer))
(bufferp (other-buffer nil))
(bufferp (other-buffer 1))
(bufferp (other-buffer "no-such-buffer"))
(let* ((a (get-buffer-create "ob-a"))
       (b (get-buffer-create "ob-b"))
       (other (other-buffer a)))
  (prog1 (and (bufferp other) (not (eq other a)))
    (kill-buffer a)
    (kill-buffer b)))
(let* ((a (get-buffer-create "ob-c"))
       (b (get-buffer-create "ob-d"))
       (other (other-buffer "ob-c")))
  (prog1 (and (bufferp other) (not (equal (buffer-name other) "ob-c")))
    (kill-buffer a)
    (kill-buffer b)))
