(fboundp 'switch-to-buffer)
(fboundp 'display-buffer)
(fboundp 'pop-to-buffer)

(condition-case err (save-current-buffer (bufferp (switch-to-buffer "*scratch*"))) (error err))
(condition-case err (save-current-buffer (windowp (display-buffer "*scratch*"))) (error err))
(condition-case err (save-current-buffer (bufferp (pop-to-buffer "*scratch*"))) (error err))

(condition-case err (switch-to-buffer) (error (car err)))
(condition-case err (display-buffer) (error (car err)))
(condition-case err (pop-to-buffer) (error (car err)))

(condition-case err (save-current-buffer (switch-to-buffer "*scratch*" nil nil nil)) (error (car err)))
(condition-case err (save-current-buffer (display-buffer "*scratch*" nil nil nil)) (error (car err)))
(condition-case err (save-current-buffer (pop-to-buffer "*scratch*" nil nil nil)) (error (car err)))
