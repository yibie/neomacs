; transpose-words should follow Emacs point-sensitive word selection and
; argument/error behavior.
(condition-case err
    (with-temp-buffer
      (insert "aa bb")
      (goto-char 1)
      (transpose-words 1)
      (buffer-string))
  (error err))

(condition-case err
    (with-temp-buffer
      (insert "one two three")
      (goto-char 5)
      (transpose-words 1)
      (buffer-string))
  (error err))

(condition-case err
    (with-temp-buffer
      (insert "aa")
      (goto-char 1)
      (transpose-words 1)
      (buffer-string))
  (error err))

(condition-case err
    (with-temp-buffer
      (insert "a b")
      (goto-char 1)
      (transpose-words -1)
      (buffer-string))
  (error err))

(condition-case err
    (with-temp-buffer
      (insert "aa bb")
      (goto-char 1)
      (transpose-words))
  (error err))
