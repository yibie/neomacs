; secure-hash binary output should preserve Emacs byte-level semantics.
(let ((s (secure-hash 'sha1 "abc" nil nil t)))
  (list (string-bytes s)
        (aref s 0)
        (substring s 0 1)))

(let ((s (secure-hash 'sha256 "abc" nil nil t)))
  (list (string-bytes s)
        (aref s 0)
        (aref s 31)
        (substring s 0 1)))

(let ((s (secure-hash 'md5 "abc" nil nil t)))
  (list (string-bytes s)
        (aref s 0)
        (aref s 15)
        (substring s 0 1)))
