; Syntax descriptor query semantics for current buffer text.

(fboundp 'syntax-after)

(with-temp-buffer
  (insert "a")
  (syntax-after 1))

(with-temp-buffer
  (insert "(")
  (syntax-after 1))

(with-temp-buffer
  (insert "(")
  (syntax-after 2))

(with-temp-buffer
  (insert "a")
  (syntax-after 0))

(with-temp-buffer
  (insert "a")
  (syntax-after -1))

(condition-case err (syntax-after 1 2) (wrong-number-of-arguments (car err)))
(condition-case err (syntax-after "1") (error err))
